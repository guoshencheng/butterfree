<style media="screen">
  a {
    color: #333333;
  }
</style>
<div class="box">
  <div class="box-header">
    <div class="box-title">{{title}}</div>
  </div>
  <div class="box-header">
    <button type="button" class="btn btn-primary create-cate">创建</button>
  </div>
  <div class="box-body">
    <table class="table table-bordered" id="cate-table" >
      <thead>
        <tr>
          <th>编号</th>
          <th>类别名</th>
          <th>类别描述</th>
          <th>操作</th>
        </tr>
      </thead>
    </table>
  </div>
</div>
<script type="text/x-dot-template" id="post-cate-editor" >
<div class="content">
  <form id="post-cate-form" data-id="\{{=it.id || ''}}">
    <div class="form-group">
      <label class="control-label">类别名:</label>
      <input class="form-control" type="text" name="name" value="\{{=it.name || ''}}" />
    </div>
    <div class="form-group">
      <label class="control-label">类别描述:</label>
      <textarea class="form-control" name="description" rows="3">\{{=it.description || ''}}</textarea>
    </div>
  </form>
</div>
</script>
<script src="/js/postCategory.js?t={{timestamp}}" charset="utf-8"></script>
